.page-body {
  width: 100%;
  /* padding-top: 60rpx; */
}

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section_center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-section:last-child {
  margin-bottom: 0;
}

.page-section-gap {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-section-spacing {
  box-sizing: border-box;
  /* padding: 0 80rpx; */
}

.page-section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.page-section-gap .page-section-title {
  padding-left: 0;
  padding-right: 0;
}

button {
  margin-bottom: 30rpx;
}

button:last-child {
  margin-bottom: 0;
}

.page-section-title {
  padding: 0;
}

swiper {
  height: 500rpx;
}

.swiper-item {
  display: block;
  height: 500rpx;
}

.page-section-title {
  margin-top: 60rpx;
  position: relative;
}

.info {
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}

.page-foot {
  margin-top: 50rpx;
}

.page-body {
  position: relative;
}

.page-section .weui-cells {
  position: absolute;
  bottom: 5px;
  left: 50%;
  width: 630rpx;
  margin-left: -315rpx;
  border-radius: 16px;
  overflow: hidden;
}

.main_box .weui-grids {
  border-top: 0;
  border-left: 0;
}

.main_box .weui-grids .weui-grid__icon {
  width: 80rpx;
  height: 80rpx;
}

.main_box .weui-grid {
  width: 25%;
  padding: 20rpx;
  border-right: 0;
  border-bottom: 0;
}

.main_box .weui-grid_active, .house-con .weui-cell_active {
  background-color: #fff;
}

.house-con {
  padding-bottom: 30rpx;
}

.house-con .weui-panel__hd {
  font-size: 30rpx;
  color: #333;
}
.house-con_list{
  padding-top: 20rpx;
}
.house-con_list .weui-media-box__title {
  font-size: 30rpx;
  line-height: 1.4;
  white-space: unset;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.house-con_list .weui-media-box__desc {
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  font-size: 24rpx;
  -webkit-line-clamp: 1;
}

.house-con_list .weui-media-box__hd_in-appmsg {
  width: 232rpx;
  height: 190rpx;
}

.house-con_list .weui-btn {
  margin-top: 0;
  margin-right: 12rpx;
  margin-bottom: 0;
  font-size: 12px;
  padding: 0 12rpx;
  line-height: 36rpx;
}

.house-con_list .label-list {
  height: 45rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.house-con_list .price, .house-con_list .univalent {
  display: inline-block;
}

.house-con_list .price {
  margin-right: 18rpx;
  font-size: 28rpx;
  color: #e64340;
}

.house-con_list .univalent {
  font-size: 24rpx;
  color: #999;
}

.house-con .more-house_btn {
  margin: 0 160rpx;
}

.house-con .more-house_btn .weui-btn {
  line-height: 2;
  font-size: 32rpx;
}

.house-con .weui-media-box {
  padding: 10rpx 26rpx;
}

.house-con .weui-media-box .weui-media-box__info {
  padding-bottom: 0;
  line-height: inherit;
}

.house-con .weui-media-box .weui-media-box__info__meta {
  padding-right: 0;
  padding-left: 1em;
  padding-top: 11rpx;
  color: #333;
}

.house-con .weui-media-box .weui-media-box__info__meta:first-child {
  padding-left: 0;
  padding-top: 0;
  font-size: 32rpx;
}
